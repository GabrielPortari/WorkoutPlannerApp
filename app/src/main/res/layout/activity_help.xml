<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.HelpActivity">

    <TextView
        android:id="@+id/text_what_is"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginTop="4dp"
        android:text="@string/q_what_is"
        android:textSize="24sp"
        app:drawableStartCompat="@drawable/baseline_arrow_right_24" />

    <TextView
        android:id="@+id/text_what_is_ans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="@string/ans_what_is" />

    <TextView
        android:id="@+id/text_get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:text="@string/q_getting_started"
        android:textSize="24sp"
        app:drawableStartCompat="@drawable/baseline_arrow_right_24" />

    <TextView
        android:id="@+id/text_get_started_ans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="@string/ans_getting_started" />

</LinearLayout>